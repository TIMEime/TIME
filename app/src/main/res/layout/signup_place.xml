<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup_view">


    <EditText
        android:id="@+id/sign_account_edit"
        android:layout_width="250dp"
        android:layout_height="45dip"
        android:background="@drawable/edittext"
        android:textColorHint="#AAAAAA"
        android:textSize="18dip"
        android:singleLine="true"
        android:hint="請輸入..."
        android:layout_below="@+id/sign_account"
        android:layout_alignStart="@+id/sign_password" />
    <EditText
        android:id="@+id/sign_password_edit"
        android:layout_width="250dp"
        android:layout_height="45dip"
        android:background="@drawable/edittext"
        android:textColorHint="#AAAAAA"
        android:textSize="18dip"
        android:singleLine="true"
        android:hint="請輸入..."
        android:password="true"
        android:layout_below="@+id/sign_password"
        android:layout_alignStart="@+id/sign_confirm_password" />
    <EditText
        android:id="@+id/sign_confirm_password_edit"
        android:layout_width="250dp"
        android:layout_height="45dip"
        android:background="@drawable/edittext"
        android:textColorHint="#AAAAAA"
        android:textSize="18dip"
        android:singleLine="true"
        android:hint="請輸入..."
        android:password="true"
        android:layout_below="@+id/sign_confirm_password"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/sign_account"
        android:text="輸入帳號:"
        android:textSize="18dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView3"
        android:layout_alignStart="@+id/sign_account_edit" />

    <TextView
        android:id="@+id/sign_password"
        android:text="輸入密碼:"
        android:textSize="18dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/sign_account_edit"
        android:layout_alignStart="@+id/sign_password_edit" />

    <TextView
        android:id="@+id/sign_confirm_password"
        android:text="確認密碼:"
        android:textSize="18dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/sign_password_edit"
        android:layout_alignStart="@+id/sign_confirm_password_edit" />

    <Button
        android:id="@+id/back_button"
        android:background="#00BBFF"
        android:text="返回"
        android:textSize="18sp"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_below="@+id/sign_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp" />

    <Button
        android:text="註冊"
        android:background="#FFA488"
        android:textSize="18sp"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:id="@+id/sign_button"
        android:layout_below="@+id/sign_confirm_password_edit"
        android:layout_alignStart="@+id/back_button"
        android:layout_marginTop="11dp" />


</RelativeLayout>