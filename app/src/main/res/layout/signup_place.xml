<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/sign_button"
        android:background="@drawable/button_shape"
        android:text="註冊"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="34dp"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/sign_email_edit"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/sign_account"
        android:text="輸入帳號:"
        android:textSize="16dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/sign_password_edit"
        android:layout_width="fill_parent"
        android:layout_height="36dip"
        android:background="@drawable/edittext"
        android:textColorHint="#AAAAAA"
        android:textSize="15dip"
        android:singleLine="true"
        android:hint="請輸入..."
        android:password="true"
        android:layout_below="@+id/sign_password"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/sign_confirm_password_edit"
        android:layout_width="fill_parent"
        android:layout_height="36dip"
        android:background="@drawable/edittext"
        android:textColorHint="#AAAAAA"
        android:textSize="15dip"
        android:singleLine="true"
        android:hint="請輸入..."
        android:password="true"
        android:layout_below="@+id/sign_confirm_password"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/sign_confirm_password"
        android:text="確認密碼:"
        android:textSize="16dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/sign_password_edit"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/sign_email_edit"
        android:layout_width="fill_parent"
        android:layout_height="36dip"
        android:background="@drawable/edittext"
        android:textColorHint="#AAAAAA"
        android:textSize="15dip"
        android:singleLine="true"
        android:hint="請輸入..."
        android:layout_below="@+id/sign_email"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/sign_email"
        android:text="電子郵件:"
        android:textSize="16dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/sign_confirm_password_edit"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/sign_password"
        android:text="輸入密碼:"
        android:textSize="16dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/sign_account_edit"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/sign_account_edit"
        android:layout_width="fill_parent"
        android:layout_height="36dip"
        android:background="@drawable/edittext"
        android:textColorHint="#AAAAAA"
        android:textSize="15dip"
        android:singleLine="true"
        android:hint="請輸入..."
        android:layout_below="@+id/sign_account"
        android:layout_alignParentEnd="true" />
</RelativeLayout>