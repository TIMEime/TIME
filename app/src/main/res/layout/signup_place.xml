<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/sign_account"
        android:text="輸入帳號:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp" />
    <TextView
        android:id="@+id/sign_password"
        android:text="輸入密碼:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_account"
        android:layout_marginTop="20dp" />
    <TextView
        android:id="@+id/sign_confirm_password"
        android:text="確認密碼:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_password"
        android:layout_marginTop="20dp" />
    <TextView
        android:id="@+id/sign_email"
        android:text="電子郵件:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_confirm_password"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/sign_button"
        android:background="@drawable/button_shape"
        android:text="註冊"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_email_edit"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="55dp"
        android:layout_marginTop="125dp" />

    <EditText
        android:id="@+id/sign_password_edit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:password="true"
        android:layout_below="@+id/sign_account_edit"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/sign_account" />

    <EditText
        android:id="@+id/sign_confirm_password_edit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:password="true"
        android:layout_below="@+id/sign_password"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/sign_password"
        android:layout_above="@+id/sign_email" />

    <EditText
        android:id="@+id/sign_email_edit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_confirm_password_edit"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/sign_confirm_password" />

    <EditText
        android:id="@+id/sign_account_edit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sign_password"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/sign_account" />
</RelativeLayout>