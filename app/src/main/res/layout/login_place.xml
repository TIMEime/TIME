<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/view"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:id="@+id/imageView"
        android:paddingTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout

        android:id="@+id/layout2"
        android:orientation="vertical"
        android:background="#88bbbbbb"
        android:layout_width="300dp"
        android:layout_height="380dp"
        android:layout_marginBottom="58dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/account_edit_text"
            android:layout_width="180dp"
            android:layout_height="45dip"
            android:background="@drawable/edittext"
            android:textColorHint="#AAAAAA"
            android:textSize="17dip"
            android:singleLine="true"
            android:hint="請輸入..."
            android:paddingLeft="10dp"
            android:layout_marginTop="40dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/account" />

        <EditText
        android:id="@+id/password_edit_text"
        android:layout_width="180dp"
        android:layout_height="45dip"
        android:background="@drawable/edittext"
        android:paddingRight="30dp"
        android:textColorHint="#AAAAAA"
        android:textSize="17dip"
        android:singleLine="true"
        android:hint="請輸入..."
        android:paddingLeft="10dp"
        android:password="true"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/account_edit_text"
        android:layout_toEndOf="@+id/password" />

        <TextView
            android:id="@+id/password"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密碼: "
            android:textSize="24sp"
            android:paddingLeft="15dp"
            android:layout_alignBaseline="@+id/password_edit_text"
            android:layout_alignBottom="@+id/password_edit_text"
            android:layout_toStartOf="@+id/account_edit_text" />

        <Button
            android:text="登入"
            android:textSize="15sp"
            android:background="@drawable/button_shape"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/login_button"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/password_edit_text"
            android:layout_alignStart="@+id/password_edit_text" />

        <Button
            android:text="註冊"
            android:textSize="15sp"
            android:background="@drawable/button_shape"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/signup_button"
            android:layout_alignBaseline="@+id/login_button"
            android:layout_alignBottom="@+id/login_button"
            android:layout_alignEnd="@+id/password_edit_text" />

        <TextView
            android:textColor="@android:color/black"
            android:id="@+id/account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="帳號: "
            android:textSize="24sp"
            android:paddingLeft="15dp"
            android:layout_alignBaseline="@+id/account_edit_text"
            android:layout_alignBottom="@+id/account_edit_text"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12dp" />



        <Button
            android:text="小幫手"
            android:textSize="15sp"
            android:background="@drawable/button_shape"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/button8"
            android:layout_marginBottom="16dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/signup_button" />
    </RelativeLayout>


</RelativeLayout>