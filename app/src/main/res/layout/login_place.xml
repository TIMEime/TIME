<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#DDDDDD"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/password_edit_text"
        android:layout_width="250dp"
        android:layout_height="45dip"
        android:background="@drawable/edittext"
        android:paddingRight="30dp"
        android:textColorHint="#AAAAAA"
        android:textSize="17dip"
        android:singleLine="true"
        android:hint="請輸入..."
        android:password="true"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/account_edit_text"
        android:layout_toEndOf="@+id/password" />

    <Button
        android:text="註冊"
        android:textSize="18sp"
        android:background="@drawable/button_shape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signup_button"
        android:layout_alignBaseline="@+id/login_button"
        android:layout_alignBottom="@+id/login_button"
        android:layout_alignEnd="@+id/password_edit_text" />

    <Button
        android:text="小幫手"
        android:textSize="18sp"
        android:background="@drawable/button_shape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button8"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/password"
        android:layout_marginBottom="11dp" />

    <EditText
        android:id="@+id/account_edit_text"
        android:layout_width="250dp"
        android:layout_height="45dip"
        android:background="@drawable/edittext"
        android:textColorHint="#AAAAAA"
        android:textSize="17dip"
        android:singleLine="true"
        android:hint="請輸入..."
        android:layout_below="@+id/imageView"
        android:layout_toEndOf="@+id/account" />

    <TextView
        android:id="@+id/account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="帳號: "
        android:textSize="24sp"
        android:layout_marginStart="14dp"
        android:paddingLeft="15dp"
        android:layout_alignBaseline="@+id/account_edit_text"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密碼: "
        android:textSize="24sp"
        android:paddingLeft="15dp"
        android:layout_alignBaseline="@+id/password_edit_text"
        android:layout_toStartOf="@+id/account_edit_text" />

    <Button
        android:text="登入"
        android:textSize="18sp"
        android:background="@drawable/button_shape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_button"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/password_edit_text"
        android:layout_toEndOf="@+id/password" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>